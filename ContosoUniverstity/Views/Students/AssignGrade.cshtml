@model ContosoUniverstity.Models.Enrollment

<h2>Assign Grade</h2>

<form asp-action="AssignGrade">
    <div class="form-group">
        <label asp-for="StudentID" class="control-label">Student</label>
        <select asp-for="StudentID" class="form-control" asp-items="ViewBag.Students">
            <option value="">Select a student</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CourseID" class="control-label">Course</label>
        <select asp-for="CourseID" class="form-control" asp-items="ViewBag.Courses">
            <option value="">Select a course</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Grade" class="control-label">Grade</label>
        <input asp-for="Grade" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Assign Grade</button>
</form>

